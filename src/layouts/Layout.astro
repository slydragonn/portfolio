---
import { Image } from 'astro:assets';
import Avatar from '../components/Avatar.astro';
import Navbar from '../components/Navbar.astro'
import COLORS from '../constants/colors';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Alejandro's Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/fav.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="bg"></div>
			<section class="profile">
				<Avatar 
					title='Alejandro Londoño'
					body='I am a Software Developer based in Medellin'
					href='/alogo.jpg'
				/>
				<Navbar />
			</section>
		</header>
		<slot />
		<footer>
			<span>© 2024 Alejandro Londoño. All Rights Reserved.</span>
		</footer>
	</body>
</html>
<style is:global define:vars={{white: COLORS.white, black: COLORS.black}}>
	html {
		font-family: 'Courier New', Courier, monospace;
		background-color: var(--white);
		color: var(--black);
	}
	* {
		margin: 0;
		padding: 0;
	}
	header > .bg {
		background: radial-gradient(circle, rgba(137,255,126,1) 0%, rgba(166,237,255,1) 100%);
		background-size: 400% 400%;
		animation: gradient 40s ease infinite;
		height: 100px;
	}

	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	header > .profile {
		display: flex;
		justify-content: space-between;
		margin: 0 auto;
		padding: 20px;
		width: 800px;
		max-width: calc(100% - 40px);
		gap: 20px;
		flex-wrap: wrap;
	}
	.frontpage {
		width: 100%;
		height: 150px;
		object-fit: cover;
	}
	footer {
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 0 auto;
		padding: 40px 20px;
		width: 800px;
		max-width: calc(100% - 40px);
		color: gray;
		text-align: center;
	}

	@media screen and (max-width: 790px) {
		header > .profile {
			gap: 40px;
		}
	}
	@media screen and (max-width: 400px) {
		header > .profile {
			padding: 20px 10px;
		}
	}
</style>
