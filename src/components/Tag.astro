---
interface Props {
    title: string;
    bg: string;
    color?: string;
}

const { title, bg, color } = Astro.props
---

<span class="tag">
    { title }
</span>

<style define:vars={{bg: bg, fg: color ?? 'black'}}>
    .tag {
        background-color: var(--bg);
        border: 1px solid #d6d6d6;
        padding: 5px 10px;
        border-radius: 9999px;
        font-size: 13px;
        color: var(--fg);
    }
</style>