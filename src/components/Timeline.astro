---
interface TimelipeObject {
    title: string;
    body: string;
}

interface Props {
    title: string;
    data: TimelipeObject[];
}

const { title, data } = Astro.props;
---

<div class="timelapse">
    <h2>{title}</h2>
    <ul>
        {
            data.map(el => (
                <li>
                    <span>{el.title}</span>
                    <p>{el.body}</p>
                </li>
            ))
        }
    </ul>
</div>

<style>
    .timelapse > h2 {
        font-size: 18px;
        margin-bottom: 20px;
    }
    .timelapse > ul {
        list-style: none;
    }
    .timelapse > ul > li {
        display: flex;
        gap: 20px;
        margin-bottom: 10px;
    }
    .timelapse > ul > li > span {
        font-weight: 600;
    }
    .timelapse > ul > li > p {
        font-size: 15px;
    }
</style>