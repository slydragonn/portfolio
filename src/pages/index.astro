---
import Layout from '../layouts/Layout.astro';
import MainContainer from '../layouts/MainContainer.astro';
import Link from '../components/Link.astro';
import Timeline from '../components/Timeline.astro';
import Card from '../components/Card.astro';
import Tag from '../components/Tag.astro';
import Title from '../components/Title.astro';
import { PROFILE, BIO, SKILLS } from '../content/resume';
---

<Layout title="Welcome to Alejandro's Portfolio">
	<MainContainer>
		<section class="about-container">
			<div class="about">
				<Title value='About me' type='h2'/>
				<p>{PROFILE}</p>
			</div>
			<div class="links-container">
				<Link
					title='Location'
					body='ðŸ‡¨ðŸ‡´ Medellin, CO'
					href='/'
				/>
				<Link
					title='Github'
					body='@slydragonn'
					href='https://github.com/slydragonn'
				/>
				<Link
					title='Linkedin'
					body='@alejolg'
					href='https://www.linkedin.com/in/alejolg/'
				/>
				<Link
					title='Dev.to'
					body='@slydragonn'
					href='https://dev.to/slydragonn''
				/>
			</div>
		</section>
		<section class="tags-container">
			{
				SKILLS.map(skill => <Tag title={skill} />)
			}
		</section>
		<section>
            <Title value="Popular Projects" type="h2"/>
            <div class="card-container">
                <Card
                    title="Neovim Setups"
                    img='/neovim.jpg'
                    alt='Neovim setup'
                    href='/projects/neovim-setup'
                    size='lg'
					tech={["Lua", "VimScript", "Lazy.nvim", "Packer.nvim"]}
                />
                <Card
                    title="Blue River"
                    img='/blueriver.jpg'
                    alt='Blue River'
                    href='/projects/blue-river'
                    size='lg'
					tech={["TypeScript", "Python", "Next.js", "Django"]}
                />
            </div>
        </section>
		<Timeline
			title='Bio'
			data={BIO}
		/>
		<section class="recent-container">
			<Title value='Fixed' type='h2'/>
			<div>
				<Card
                    title="Ultimate Neovim Setup Guide: lazy.nvim Plugin Manager"
                    img='/post-lazy.jpg'
                    alt='Ultimate Neovim Setup'
                    href='https://dev.to/slydragonn/ultimate-neovim-setup-guide-lazynvim-plugin-manager-23b7'
                    size='lg'
                />
				<Card
				title="DEV.to"
				img='/devto.jpg'
				alt='dev.to slydragonn'
				href='https://dev.to/slydragonn'
				size='lg'
				/>
			</div>
		</section>
	</MainContainer>
</Layout>

<style>
	.about-container {
		display: flex;
		justify-content: space-between;
		gap: 40px;
	}
	.about > p {
		max-width: 400px;
		font-size: 15px;
	}
	.links-container {
		display: flex;
		justify-content: space-between;
		gap: 20px;
		flex-wrap: wrap;
		max-width: 40%;
	}
	.tags-container {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
	.recent-container > div {
		display: flex;
		justify-content: space-between;
		gap: 20px;
	}
	.card-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
    }
	@media screen and (max-width: 790px) {
		.about-container {
			flex-direction: column;
		}
		.about > p {
			max-width: 100%;
		}
		.links-container {
			max-width: 100%;
		}
		.recent-container > div {
			display: flex;
			flex-direction: column;
			gap: 40px;
		}
	}
</style>
