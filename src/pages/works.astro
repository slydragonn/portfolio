---
import SocialNetworks from "../components/SocialNetworks.astro";
import Layout from "../layouts/Layout.astro";
import MainContainer from "../layouts/MainContainer.astro"
import Card from "../components/Card.astro";
import Title from "../components/Title.astro";
import SOCIAL_NETWORKS from "../constants/social-networks";
---

<Layout title="Works | Alejandro's Portfolio">
    <MainContainer>
        <SocialNetworks
            data={SOCIAL_NETWORKS}
        />
        <section>
            <Title value="Popular Projects" type="h2"/>
            <div class="card-container">
                <Card
                    title="Neovim Setups"
                    img='/neovim.jpg'
                    alt='Neovim setup'
                    href='/projects/neovim-setup'
                    size='md'
                />
                <Card
                    title="Blue River"
                    img='/blueriver.jpg'
                    alt='Blue River'
                    href='/projects/blue-river'
                    size='md'
                />
            </div>
        </section>
    </MainContainer>
</Layout>

<style>
    .card-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 10px;
    }
</style>